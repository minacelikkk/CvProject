@using CvProject.Models.Entities
@model List<Skill>
@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{
	string renk = "";
}
@{
	string labelRenk = "";
}
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
	<div class="wrapper">
		<section class="content">
			<div class="container-fluid">
				<div class="row ">
					<div class="col-md-12">
						<div class="card">
							<div class="card-header">
								<h3 class="card-title">Yetenek Listem</h3>
							</div>
							<div class="card-body">
								<table class="table table-bordered">
									<thead>
										<tr>
											<th style="width: 10px">#</th>
											<th>Yetenek</th>
											<th>Derece</th>
											<th style="width: 40px">Oran</th>
											<th>Düzenle</th>
											<th>Sil</th>
										</tr>
									</thead>

									<tbody>
										@foreach (var item in Model)
										{
											if (item.Oran > 50 && item.Oran <= 50)
											{
												renk = "progress-bar bg-danger";
												labelRenk = "badge bg-danger";
											}
											if (item.Oran >= 51 && item.Oran <= 70)
											{
												renk = "progress-bar bg-warning";
												labelRenk = "badge bg-warning";
											}
											if (item.Oran >= 71 && item.Oran <= 84)
											{
												renk = "progress-bar bg-primary";
												labelRenk = "badge bg-primary";
											}
											if (item.Oran >= 85 && item.Oran <= 100)
											{
												renk = "progress-bar bg-success";
												labelRenk = "badge bg-success";
											}
											<tr>
												<td>@item.Id</td>
												<td>@item.Skill1</td>
												<td>
													<div class="progress progress-xs">
														<div class="@renk" style="width: @item.Oran%"></div>
													</div>
												</td>
												<td><span class="@labelRenk">@item.Oran%</span></td>
												<td>
													<a href="/Skill/Update/@item.Id" class="btn btn-info btn-sm">
														<i class="fas fa-pencil-alt">
														</i>
														Düzenle
													</a>
												</td>
												<td>
													<a href="/Skill/Delete/@item.Id" class="btn btn-danger btn-sm">
														<i class="fas fa-trash">
														</i>
														Sil
													</a>
												</td>
											</tr>

										}
									</tbody>
								</table>
								<br />
								<a href="/Skill/Add/" class="btn btn-primary">Yeni Yetenek Ekle</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
	</div>
</body>
</html>


