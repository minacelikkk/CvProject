@using CvProject.Models.Entities
@model List<About>
@{
	Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
	<meta name="description" content="" />
	<meta name="author" content="" />
	<title>Resume - Start Bootstrap Theme</title>
	<link rel="icon" type="image/x-icon" href="~/startbootstrap-resume-gh-pages/assets/img/favicon.ico" />
	<!-- Font Awesome icons (free version)-->
	<script src="https://use.fontawesome.com/releases/v5.15.1/js/all.js" crossorigin="anonymous"></script>
	<!-- Google fonts-->
	<link href="https://fonts.googleapis.com/css?family=Saira+Extra+Condensed:500,700" rel="stylesheet" type="text/css" />
	<link href="https://fonts.googleapis.com/css?family=Muli:400,400i,800,800i" rel="stylesheet" type="text/css" />
	<!-- Core theme CSS (includes Bootstrap)-->
	<link href="~/startbootstrap-resume-gh-pages/css/styles.css" rel="stylesheet" />
</head>
<body id="page-top">
	<!-- Navigation-->
	<nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top" id="sideNav">
		<a class="navbar-brand js-scroll-trigger" href="#page-top">
			<span class="d-block d-lg-none">Clarence Taylor</span>
			<span class="d-none d-lg-block"><img class="img-fluid img-profile rounded-circle mx-auto mb-2" src="/startbootstrap-resume-gh-pages/assets/img/pixelcut-export-1652684984181.png" alt="" /></span>
		</a>
		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
		<div class="collapse navbar-collapse" id="navbarSupportedContent">
			<ul class="navbar-nav">
				<li class="nav-item"><a class="nav-link js-scroll-trigger" href="#about">Hakkımda</a></li>
				<li class="nav-item"><a class="nav-link js-scroll-trigger" href="#experience">Deneyimlerim</a></li>
				<li class="nav-item"><a class="nav-link js-scroll-trigger" href="#education">Eğitim</a></li>
				<li class="nav-item"><a class="nav-link js-scroll-trigger" href="#skills">Yeteneklerim</a></li>
				<li class="nav-item"><a class="nav-link js-scroll-trigger" href="#interests">İlgi Alanlarım</a></li>
				<li class="nav-item"><a class="nav-link js-scroll-trigger" href="#awards">Sertifikalarım</a></li>
				<li class="nav-item"><a class="nav-link js-scroll-trigger" href="#contact">İletişim</a></li>
			</ul>
		</div>
	</nav>
	<!-- Page Content-->
	<div class="container-fluid p-0">
		<!-- About-->
		@foreach (var item in Model)
		{
			<section class="resume-section" id="about">
				<div class="resume-section-content">
					<h1 class="mb-0">
						@item.FirstName
						<span class="text-primary"> @item.LastName</span>
					</h1>
					<div class="subheading mb-5">
						@item.Address · @item.Telephone
						<a href="mailto:name@email.com">@item.Email</a>
					</div>
					<p class="lead mb-5">@item.Description</p>
					@await Component.InvokeAsync("SocialMediaList")

				</div>
			</section>
		}

		<hr class="m-0" />
		@await Component.InvokeAsync("ExperienceList")

		<hr class="m-0" />
		@await Component.InvokeAsync("EducationList")

		<hr class="m-0" />
			@await Component.InvokeAsync("SkillList")

		<hr class="m-0" />
			@await Component.InvokeAsync("HobbyList")

		<hr class="m-0" />
		@await Component.InvokeAsync("CertificateList")
		
		<hr class="m-0" />
		@await Component.InvokeAsync("ContactList")


	</div>
	<!-- Bootstrap core JS-->
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"></script>
	<!-- Third party plugin JS-->
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.min.js"></script>
	<!-- Core theme JS-->
	<script src="~/startbootstrap-resume-gh-pages/js/scripts.js"></script>
</body>
</html>

