@using CvProject.Models.Entities
@model List<Hobby>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />

<form method="post" class="col md-12">
	<h2>Hobi Düzenleme Sayfası</h2>
	@foreach (var item in Model)
	{
		<br />
		@Html.Label("Açıklama 1")
		<textarea rows="5" class="form-control" name="Description">@item.Description</textarea>
		<br />
		@Html.Label("Açıklama 2")
		<textarea rows="5" class="form-control" name="Description2">@item.Description2</textarea>
		<br />
		<a href="/Hobby/Index/" class="btn btn-info ">Güncelle</a>
		<br />

	}

</form>






